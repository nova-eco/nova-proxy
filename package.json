{
  "name": "@nova/nova-proxy",
  "version": "0.8.0",
  "private": false,
  "homepage": "https://nova.eco",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/nova-eco/nova-proxy.git"
  },
  "license": "MIT",
  "author": "admin <admin@nova.eco>",
  "packageManager": "npm@10",
  "engines": {
    "node": ">=22",
    "npm": ">=10"
  },
  "scripts": {
    "changelog": "npx auto-changelog",
    "changelog:commit": "git commit -m 'ci: update changelog' --no-verify",
    "check": "npm run format && npm run spell",
    "commit-msg": "commitlint --edit",
    "docker": "npm run docker:has && npm run docker:start",
    "docker:has": "bash -c 'command -v docker'",
    "docker:start": "docker compose up --build --force-recreate",
    "docker:stop": "docker compose down --remove-orphans --rmi all",
    "env:cp": "bash -c 'cp --update=none ./.env.TEMPLATE ./.env'",
    "format": "npm run  format:check",
    "format:base": "prettier .",
    "format:check": "npm run  format:base --check",
    "format:fix": "npm run  format:base --write",
    "lint": "npm run  lint:docker",
    "lint:docker": "npm run docker:has && npm run lint:docker:dockerfile && npm run lint:docker:compose",
    "lint:docker:dockerfile": "bash ./scripts/docker-build-check.sh",
    "lint:docker:compose": "docker compose config",
    "postinstall": "npm run  env:cp",
    "pre-push": "npm run check",
    "prepare": "husky",
    "prestart": "npm run check && npm run lint",
    "spell": "npx cspell .",
    "start": "npm run start:only",
    "start:only": "npm run docker",
    "stop": "npm run docker:stop"
  },
  "devDependencies": {
    "auto-changelog": "^2.5.0",
    "cspell": "^8.18.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/format": "^20.0.0",
        "husky": "^9.1.7",
            "prettier": "^3.6.1",
    "prettier-plugin-sh": "^0.17.4",
    "prettier-plugin-sort-json": "^4.1.1"
  }
}
